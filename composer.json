{
  "name": "originphp/app",
  "description": "OriginPHP Application",
  "homepage": "https://www.originphp.com",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^7.2.0",
    "originphp/framework": "^1.30",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-intl": "*"
  },
  "require-dev": {
    "originphp/debug-plugin": "^1.*"
  },
  "suggest": {
    "ext-curl": "To use the HTTP utility",
    "phpseclib/phpseclib": "To use the SFTP Storage Engine",
    "php-memcached": "To use the Memcached Cache engine",
    "phpunit/phpunit": "To use the testing locally. "
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"copy('config' . DIRECTORY_SEPARATOR . '.env.php.default', 'config' . DIRECTORY_SEPARATOR . '.env.php');\""
    ]
  }
}