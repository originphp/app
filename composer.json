{
  "name": "originphp/app",
  "description": "OriginPHP Application",
  "homepage": "https://www.originphp.com",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^7.2.0",
    "originphp/framework": "^1.30"
  },
  "require-dev": {
    "originphp/debug-plugin": "^1.0",
    "phpunit/phpunit": "^8.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"copy('config' . DIRECTORY_SEPARATOR . '.env.php.default', 'config' . DIRECTORY_SEPARATOR . '.env.php');\""
    ]
  }
}