$port = 8000;
if (isset($argv[1])) {
    $port = $argv[1];
}

echo "OriginPHP Development Server\n";
echo "Starting on http://localhost:{$port}\n";
$cmd = "php -S localhost:{$port} -t public";
pclose(popen($cmd, 'r'));
