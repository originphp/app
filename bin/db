require dirname(__DIR__) .  '/config/bootstrap.php';

use Origin\Console\ConsoleApplication;
use Commands\Console\Command\DbDropCommand;
use Commands\Console\Command\DbSeedCommand;
use Commands\Console\Command\DbResetCommand;
use Commands\Console\Command\DbSetupCommand;
use Commands\Console\Command\DbCreateCommand;
use Commands\Console\Command\DbMigrateCommand;
use Commands\Console\Command\DbRollbackCommand;
use Commands\Console\Command\DbSchemaDumpCommand;
use Commands\Console\Command\DbSchemaLoadCommand;

$app = new ConsoleApplication();
$app->name('db');
$app->description([
    'OriginPHP Database Commands'
]);
$app->addCommand('create', DbCreateCommand::class);
$app->addCommand('drop', DbDropCommand::class);
$app->addCommand('setup', DbSetupCommand::class);
$app->addCommand('reset', DbResetCommand::class);
$app->addCommand('seed', DbSeedCommand::class);
$app->addCommand('migrate', DbMigrateCommand::class);
$app->addCommand('rollback', DbRollbackCommand::class);
$app->addCommand('schema-load', DbSchemaLoadCommand::class);
$app->addCommand('schema-dump', DbSchemaDumpCommand::class);

exit($app->run());